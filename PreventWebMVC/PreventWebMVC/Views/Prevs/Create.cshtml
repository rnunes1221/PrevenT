@model PreventWebMVC.Models.ViewModels.PrevFormViewModel

@{
    ViewData["Title"] = "Preventivas";
}

<h2 class="text-center" > Adicionar Preventivas</h2>
<hr />
<head>
   <style>

       .row {
           margin-right: 800px;
           margin-top: 20px;
           float: right;
       }

    </style>
</head>
<body>

    
        
            <div class="itemscentral">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label asp-for="Prev.ComputerId" class="control-label"></label>
                        <select id="lista" asp-for="Prev.ComputerId" asp-items="@(new SelectList(PreventWebMVC.Services.ComputerService.GetPC(), "Id",
                    "Name"));" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Prev.Date" class="control-label"></label>
                        <input required asp-for="Prev.Date" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Prev.Obs" class="control-label"></label>
                            <input required asp-for="Prev.Obs" class="form-control" />
                          
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn myinfo" />
                    </div>
                </form>
            </div>

        


    
</body>

