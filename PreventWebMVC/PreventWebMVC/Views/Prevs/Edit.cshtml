@model PreventWebMVC.Models.ViewModels.PrevFormViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="index">
    <h2>Editar</h2>
    <h2>Preventivas</h2>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Prev.Id" />

            <div class="form-group">
                <label asp-for="Prev.ComputerId" class="control-label"></label>
                <select asp-for="Prev.ComputerId" asp-items="@(new SelectList(Model.Computers,"Id",
                    "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Prev.Date" class="control-label"></label>
                <input asp-for="Prev.Date" class="form-control" />
                <div class="form-group">
                    <label asp-for="Prev.Obs" class="control-label"></label>
                    <input asp-for="Prev.Obs" class="form-control" />
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn myinfo" />
                </div>


        </form>
    </div>
</div>


