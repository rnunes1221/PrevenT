@model IEnumerable<PreventWebMVC.Models.Computer>


    @{
        ViewData["Title"] = PreventWebMVC.Services.ComputerService.GetPCCount();
    }

    <head>
      <style>
          .myinfo {
              box-shadow: 0px 1px 0px 0px #000000;
              background: linear-gradient(to bottom, #a9f590 5%, #a9f590 100%);
              background-color: #a9f590;
              border-radius: 6px;
              border: 1px solid #000000;
              display: inline-block;
              cursor: pointer;
              color: #333333;
              font-family: Arial;
              font-size: 12px;
              text-align: center;
              padding: 5px 2px;
              width: 57px;
          }

              .myinfo:hover {
                  background: linear-gradient(to bottom, #39e39e 5%, #39e39e 100%);
                  color: black;
                  background-color: #66e4b1;
              }

              .myinfo:active {
                  position: relative;
                  top: 1px;
              }


          #myInput {
              background-image: url('/images/search.png');
              background-position: 10px 12px;
              background-repeat: no-repeat;
              width: 100%;
              font-size: 16px;
              padding: 12px 20px 12px 40px;
              border: 1px solid #ddd;
              margin-bottom: 12px;
          }
      </style>
    </head>
    <body>
      <div class="itemscentral-nomargin">
            <div class="index">
            <h2 class="index" style="text-align:center">Todos Computadores </h2>
            <h2 style="text-align:center"> @ViewData["Title"]</h2>
            </div>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Pesquisar">

            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr class="bg-info">

                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.Ip)
                        </th>

                        <th style="text-align:center" class="hide-td-mobile">
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.OpSystem)
                        </th>
                        <th style="text-align:center" class="hide-td-mobile">
                            @Html.DisplayNameFor(model => model.Domain)
                        </th>
                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.Tag)
                        </th>
                        <th style="text-align:center">Ações</th>
                    </tr>
                </thead>
                <tbody id="myTable">


                    @foreach (var item in Model)
                    {
                        <tr id="myUL" style="text-align:center">

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ip)
                            </td>

                            <td class="hide-td-mobile">
                                @Html.DisplayFor(modelItem => item.User)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpSystem)
                            </td>
                            <td class="hide-td-mobile">
                                @Html.DisplayFor(modelItem => item.Domain)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tag)
                            </td>


                            <td>
                                <a asp-action="Edit" class="btn myinfo" asp-route-id="@item.Id">Editar</a>
                                <a asp-action="Details" class="btn myinfo" asp-route-id="@item.Id">Detalhes</a>
                                <a asp-action="Delete" class="btn myinfo" asp-route-id="@item.Id">Excluir</a>

                            </td>
                        </tr>
                    }
                </tbody>


                <script>

                    $(document).ready(function () {
                        $("#myInput").on("keyup", function () {
                            var value = $(this).val().toLowerCase();
                            $("#myTable tr").filter(function () {
                                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                            });
                        });
                    });

                </script>
            </table>
        </div>    
</body>
        
    
