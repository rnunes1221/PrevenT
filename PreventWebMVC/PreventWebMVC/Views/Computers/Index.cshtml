@model IEnumerable<PreventWebMVC.Models.Computer>


    @{
        ViewData["Title"] = PreventWebMVC.Services.ComputerService.GetPCCount();
    }

    <head>

    </head>
    <body>
        <div class="itemscentral-nomargin">
            <div class="index">
                <h2 style="text-align:center" class="index">
                    Quantidade de Computadores
                    <br /> @ViewData["Title"]
                </h2>

            </div>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Pesquisar">

            <table class="table table-striped table-hover table-condensed table-info">
                <thead>
                    <tr class="index">

                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.Ip)
                        </th>

                        <th style="text-align:center" class="hide-td-mobile">
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th style="text-align:center" class="hide-td-mobile">
                            @Html.DisplayNameFor(model => model.Processor)
                        </th>
                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.OpSystem)
                        </th>
                        <th style="text-align:center" class="hide-td-mobile">
                            @Html.DisplayNameFor(model => model.Domain)
                        </th>
                        <th style="text-align:center">
                            @Html.DisplayNameFor(model => model.Tag)
                        </th>
                        <th style="text-align:center">Ações</th>
                    </tr>
                </thead>
                <tbody id="myTable">


                    @foreach (var item in Model)
                    {
                        <tr id="myUL" style="text-align:center">

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ip)
                            </td>

                            <td class="hide-td-mobile">
                                @Html.DisplayFor(modelItem => item.User)
                            </td>
                            <td class="hide-td-mobile">
                                @Html.DisplayFor(modelItem => item.Processor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpSystem)
                            </td>
                            <td class="hide-td-mobile">
                                @Html.DisplayFor(modelItem => item.Domain)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tag)
                            </td>


                            <td>

                                <a asp-action="Details" class="btn myinfo" asp-route-id="@item.Id">Detalhes</a>
                                <a asp-action="Delete" class="btn myinfo" asp-route-id="@item.Id">Excluir</a>

                            </td>
                        </tr>
                    }
                </tbody>



            </table>
            <script>

                $(document).ready(function () {
                    $("#myInput").on("keyup", function () {
                        var value = $(this).val().toLowerCase();
                        $("#myTable tr").filter(function () {
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                        });
                    });
                });

            </script>
        </div>    
</body>
        
    
